{
    "type": "origins:multiple",
    "no_food": {
        "type": "origins:prevent_item_use",
        "item_condition": {
            "type": "origins:food"
        }
    },
    "ingot_copper": {
        "type": "origins:action_over_time",
        "interval": 50,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:feed",
                    "food": 3,
                    "saturation": 3
                },
                {
                    "type": "origins:execute_command",
                    "command": "function temmies-origins:copper-golem/eat_ingot"
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "offhand",
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "minecraft:copper_ingot"
                        }
                    }
                },
                {
                    "type": "origins:food_level",
                    "comparison": "<",
                    "compare_to": 20
                }
            ]
        }
    },
    "raw_copper": {
        "type": "origins:action_over_time",
        "interval": 50,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:feed",
                    "food": 2,
                    "saturation": 2
                },
                {
                    "type": "origins:execute_command",
                    "command": "function temmies-origins:copper-golem/eat_raw"
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "offhand",
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "minecraft:raw_copper"
                        }
                    }
                },
                {
                    "type": "origins:food_level",
                    "comparison": "<",
                    "compare_to": 20
                }
            ]
        }
    },
    "block_copper": {
        "type": "origins:action_over_time",
        "interval": 50,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:feed",
                    "food": 10,
                    "saturation": 7
                },
                {
                    "type": "origins:execute_command",
                    "command": "function temmies-origins:copper-golem/eat_block"
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "offhand",
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "minecraft:copper_block"
                        }
                    }
                },
                {
                    "type": "origins:food_level",
                    "comparison": "<",
                    "compare_to": 20
                }
            ]
        }
    },
    "name": "Copper Machine",
    "description": "You cannot eat regular food. Instead, you can consume copper by placing it in your offhand. Raw copper gives two points, copper ingot gives 3, and a copper block gives 10."
}