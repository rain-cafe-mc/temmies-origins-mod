{
   "name":"Tech Mana",
   "description":"As a Technomancer, your power to perform spells comes from natural energy sources. \"Tech Mana\" as it is commonly known, is your natural source used to cast spells but these are often bounded to more technologically advance Conduits. You gain Tech Mana naturally, as the world often brings little bits of electrical energy which you can use and convert into Mana, but this process is slow. Standing on top of Redstone-type blocks will absorb its energy and give you mana quicker.",
   "type":"origins:multiple",
   "resource":{
      "type":"origins:resource",
      "min":0,
      "max":20000,
      "hud_render":{
         "should_render":true,
         "sprite_location":"origins:textures/gui/community/spiderkolo/resource_bar_02.png",
         "bar_index":14
      }
   },
   "passive_gain":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:change_resource",
         "resource":"temmies-origins:technomancer/tech_mana_resource",
         "change":10
      },
      "interval":20,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:fluid_height",
               "fluid":"minecraft:water",
               "comparison":"==",
               "compare_to":0
            },
            {
               "type":"origins:in_rain",
               "inverted":true
            }
         ]
      }
   },
   "high_passive_gain":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:change_resource",
         "resource":"temmies-origins:technomancer/tech_mana_resource",
         "change":300
      },
      "interval":10,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:on_block",
               "block_condition":{
                  "type":"origins:in_tag",
                  "tag":"temmies-origins:power_sources"
               }
            },
            {
               "type":"origins:fluid_height",
               "fluid":"minecraft:water",
               "comparison":"==",
               "compare_to":0
            },
            {
               "type":"origins:in_rain",
               "inverted":true
            }
         ]
      }
   },
   "charged_particle_effects":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:execute_command",
         "command":"execute at @s run particle minecraft:dust 255 0 0 1 ~ ~0.9 ~ .25 .25 .26 0.01 3 normal @a",
         "permission_level":4
      },
      "interval":10,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:on_block",
               "block_condition":{
                  "type":"origins:in_tag",
                  "tag":"temmies-origins:power_sources"
               }
            },
            {
               "type":"origins:fluid_height",
               "fluid":"minecraft:water",
               "comparison":"==",
               "compare_to":0
            },
            {
               "type":"origins:in_rain",
               "inverted":true
            }
         ]
      }
   },
   "charged_particle":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:execute_command",
         "command":"particle minecraft:dust 255 0 0 1 ~ ~0.5 ~ .25 .25 .26 0 2 force @a",
         "permission_level":4
      },
      "interval":1,
      "condition":{
         "type":"origins:resource",
         "resource":"temmies-origins:technomancer/tech_mana_resource",
         "comparison":">",
         "compare_to":7000
      }
   },
   "water_mana_loss":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:change_resource",
         "resource":"temmies-origins:technomancer/tech_mana_resource",
         "change":-300
      },
      "interval":10,
      "condition": {
         "type": "origins:or",
         "conditions": [
           {
             "type": "origins:fluid_height",
             "fluid": "minecraft:water",
             "comparison": ">",
             "compare_to": 0.0
           },
           {
             "type": "origins:in_rain"
           }
         ]
      }
   },
   "death":{
      "type":"origins:action_on_callback",
      "entity_action_chosen":{
         "type":"origins:change_resource",
         "resource":"temmies-origins:technomancer/tech_mana_resource",
         "change":-20000
      },
      "entity_action_respawned":{
         "type":"origins:change_resource",
         "resource":"temmies-origins:technomancer/tech_mana_resource",
         "change":-20000
      },
      "execute_chosen_when_orb":true
   }
}