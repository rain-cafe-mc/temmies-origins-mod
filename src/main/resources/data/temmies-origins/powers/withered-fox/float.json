{
    "type": "origins:multiple",
    "resource": {
        "type": "origins:resource",
        "max": 300,
        "min": 0,
        "start_value": 300,
        "hud_render": {
            "should_render": true,
			"sprite_location": "origins:textures/gui/resource_bar.png",
			"bar_index": 4,
            "condition": {
                "type": "origins:and",
                "conditions": [{
                    "type": "origins:submerged_in",
                    "fluid": "minecraft:water",
                    "inverted": true
                }, {
                    "type": "origins:submerged_in",
                    "fluid": "minecraft:lava",
                    "inverted": true
                }, {
                    "type": "origins:gamemode",
                    "gamemode": "creative",
                    "inverted": true
                }]
            }
        }
    },
    "toggle": {
        "type": "origins:resource",
        "max": 1,
        "min": 0,
        "start_value": 0,
		"hud_render": {
            "should_render": false,
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 0
        }
    },
    "active_toggle": {
        "type": "origins:active_self",
        "cooldown": 1,
        "key": "key.jump",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:or",
                "conditions": [{
                    "type": "origins:submerged_in",
                    "fluid": "minecraft:water"
                }, {
                    "type": "origins:submerged_in",
                    "fluid": "minecraft:lava"
                }, {
                    "type": "origins:gamemode",
                    "gamemode": "creative"
                }, {
                    "type": "origins:resource",
                    "inverted": false,
                    "comparison": "==",
                    "resource": "*:*_toggle",
                    "compare_to": 1
                }]
            },
            "if_action": {
				"type": "origins:change_resource",
				"resource": "*:*_toggle",
                "operation": "set",
				"change": 0
            },
            "else_action": {
				"type": "origins:change_resource",
				"resource": "*:*_toggle",
                "operation": "set",
				"change": 1
            }
        },
		"hud_render": {
            "should_render": false,
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 1
        }
    },
    "weak": {
        "type": "origins:stacking_status_effect",
        "condition": {
            "type": "origins:resource",
            "inverted": false,
            "comparison": "==",
            "resource": "*:*_toggle",
            "compare_to": 1
        },
        "duration_per_stack": 20,
        "min_stacks": 0,
        "max_stacks": 1,
        "effect": {
            "duration": 0,
            "is_ambient": false,
            "show_particles": false,
            "show_icon": false,
            "effect": "weakness",
            "amplifier": 100
        }
    },
    "timer": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
				"type": "origins:resource",
				"inverted": false,
				"comparison": "==",
				"resource": "*:*_toggle",
				"compare_to": 1
            },
            "if_action": {
				"type": "origins:change_resource",
				"resource": "*:*_resource",
				"change": -1
            },
            "else_action": {
				"type": "origins:change_resource",
                "resource": "*:*_resource",
                "change": 1
            }
        }
    },
    "damage": {
		"type": "origins:damage_over_time",
		"interval": 20,
		"onset_delay": 1,
		"damage": 2,
		"damage_source": {
			"name": "wither",
			"unblockable": true,
			"bypasses_armor": true
		},
		"condition": {
			"type": "origins:resource",
			"resource": "*:*_resource",
			"comparison": "==",
			"compare_to": 0
		}
    },
	"float": {
        "type": "origins:stacking_status_effect",
        "condition": {
            "type": "origins:resource",
            "inverted": false,
            "comparison": "==",
            "resource": "*:*_toggle",
            "compare_to": 1
        },
        "duration_per_stack": 20,
        "min_stacks": 0,
        "max_stacks": 1,
        "effect": {
            "duration": 0,
            "is_ambient": false,
            "show_particles": false,
            "show_icon": false,
            "effect": "levitation",
            "amplifier": 1
        }
    },
    "auto_disable": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:or",
                "conditions": [{
                    "type": "origins:submerged_in",
                    "fluid": "minecraft:water"
                }, {
                    "type": "origins:submerged_in",
                    "fluid": "minecraft:lava"
                }, {
                    "type": "origins:gamemode",
                    "gamemode": "creative"
                }]
            },
            "if_action": {
				"type": "origins:change_resource",
				"resource": "*:*_toggle",
                "operation": "set",
				"change": 0
            },
            "else_action": {
                "type": "origins:nothing"
            }
        }
    },
    "name": "Float",
    "description": "[Toggle] You can float, but it's too exhausting to fly for long. (automatically disables in lava / water)"
}